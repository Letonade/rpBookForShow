<h4>{{ tableTitle }}
    {% if hint is defined %}
        <a href="javascript:void(0);" data-toggle="popover-bottom-click"
           data-content='{{ hint }}'><i class="fas fa-tags fa-xs"></i></a>
    {% endif %}
</h4>

<table class="table cus-table-striped table-sm text-center cus-table-hover sticky-header">
    <thead class="cus-thead-bg-grey">
    <tr>
        {% set PartThDir %}Depository/_partials/TableView/_partials/th/th{% endset %}
        <th>#</th>
        {# Files must start by 'th'.... #}
        {% include PartThDir~'IsStandard.html.twig' with {'item': collection[0]} %}
        {% include PartThDir~'SourceBook.html.twig' with {'item': collection[0]} %}
        {% include PartThDir~'SourcePage.html.twig' with {'item': collection[0]} %}
        {% include PartThDir~'NumberOfHandNeeded.html.twig' with {'item': collection[0]} %}
        {% include PartThDir~'WeaponCategory.html.twig' with {'item': collection[0]} %}
        {% include PartThDir~'Name.html.twig' with {'item': collection[0]} %}
        {% include PartThDir~'Level.html.twig' with {'item': collection[0]} %}
        {% include PartThDir~'Cost.html.twig' with {'item': collection[0]} %}
        {% include PartThDir~'Damages.html.twig' with {'item': collection[0]} %}
        {% include PartThDir~'ModificatorDamages.html.twig' with {'item': collection[0]} %}
        {% include PartThDir~'Range.html.twig' with {'item': collection[0]} %}
        {% include PartThDir~'Criticals.html.twig' with {'item': collection[0]} %}
        {% include PartThDir~'CapacityAndUsages.html.twig' with {'item': collection[0]} %}
        {% include PartThDir~'Bulk.html.twig' with {'item': collection[0]} %}
        {% include PartThDir~'Specials.html.twig' with {'item': collection[0]} %}
    </tr>
    </thead>
    <tbody>
    {% for key, item in collection %}
        {% set damageString = 'void' %}
        {% set modificatorDamageString = 'void' %}
        {% set criticalsString = 'void' %}
        {% set specialsString = 'void' %}
        {% set capacityAndUsagesString = 'void' %}
        {% for extrafield in item.extrafields %}
            {% if extrafield.handle is same as 'damagesString' %}{% set damageString = extrafield.value %}{% endif %}
            {% if extrafield.handle is same as 'modificatorDamagesString' %}{% set modificatorDamageString = extrafield.value %}{% endif %}
            {% if extrafield.handle is same as 'criticalsString' %}{% set criticalsString = extrafield.value %}{% endif %}
            {% if extrafield.handle is same as 'specialsString' %}{% set specialsString = extrafield.value %}{% endif %}
            {% if extrafield.handle is same as 'capacityAndUsagesString' %}
                {% set capacityAndUsagesString = extrafield.value %}
            {% endif %}
        {% endfor %}
        {% if damageString is same as 'void' %}{% set damageString = false %}{% endif %}
        {% if modificatorDamageString is same as 'void' %}{% set modificatorDamageString = false %}{% endif %}
        {% if criticalsString is same as 'void' %}{% set criticalsString = false %}{% endif %}
        {% if specialsString is same as 'void' %}{% set specialsString = false %}{% endif %}
        {% if capacityAndUsagesString is same as 'void' %}{% set capacityAndUsagesString = false %}{% endif %}
        <tr>
            {% set PartTdDir %}Depository/_partials/TableView/_partials/td/td{% endset %}
            <td class="d-block d-md-none"><a href="javascript:void(0);" data-toggle="popover-bottom-click"
                                             data-content='{{ key }}'><i class="fas fa-list-ol"></i></a></td>
            <td class="d-none d-md-block">{{ key }}</td>

            {# Files must start by 'td'.... #}
            {% include PartTdDir~'IsStandard.html.twig' with {'item': item} %}
            {% include PartTdDir~'SourceBook.html.twig' with {'item': item} %}
            {% include PartTdDir~'SourcePage.html.twig' with {'item': item} %}
            {% include PartTdDir~'NumberOfHandNeeded.html.twig' with {'item': item} %}
            {% include PartTdDir~'WeaponCategory.html.twig' with {'item': item} %}
            {% include PartTdDir~'Name.html.twig' with {'item': item} %}
            {% include PartTdDir~'Level.html.twig' with {'item': item} %}
            {% include PartTdDir~'Cost.html.twig' with {'item': item} %}
            {% include PartTdDir~'Damages.html.twig' with {'item': item} %}
            {% include PartTdDir~'ModificatorDamages.html.twig' with {'item': item} %}
            {% include PartTdDir~'Range.html.twig' with {'item': item} %}
            {% include PartTdDir~'Criticals.html.twig' with {'item': item} %}
            {% include PartTdDir~'CapacityAndUsages.html.twig' with {'item': item} %}
            {% include PartTdDir~'Bulk.html.twig' with {'item': item} %}
            {% include PartTdDir~'Specials.html.twig' with {'item': item} %}
        </tr>
    {% endfor %}
    </tbody>
</table>
